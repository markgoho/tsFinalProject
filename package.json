{
  "name": "tsfinalproject",
  "version": "1.0.0",
  "description": "Micro library to take advantage of TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watchAll",
    "build": "tsc -p tsconfig.json",
    "precommit": "npm test"
  },
  "author": "Mark Goho",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.46",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.3",
    "typescript": "^2.5.3"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.ts$"
  }
}
